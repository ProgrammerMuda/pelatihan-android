<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context="com.example.ragam.engliszone.AnimalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_alignParentTop="true"
        android:background="#44f989"
        android:id="@+id/linear">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/panda"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Happy learning about Animal"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>


    </LinearLayout>

    <ScrollView
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt1"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/elephant"
                android:backgroundTint="#ff6f6f"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="ELEPHANT"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt2"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/chick"
                android:backgroundTint="#ffb76f"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="chick"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt3"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cat"
                android:backgroundTint="#fff56f"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="CAT"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt4"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/bear"
                android:backgroundTint="#ddff6f"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="BEAR"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt5"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/bird"
                android:backgroundTint="#85ff6f"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="BIRD"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt6"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/rhino"
                android:backgroundTint="#6fffb7"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="RHINO"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt7"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/pig"
                android:backgroundTint="#6fffe9"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="pig"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt8"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/dog"
                android:backgroundTint="#6fe0ff"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="dog"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt9"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/gorilla"
                android:backgroundTint="#6fa6ff"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="gorilla"
                android:textSize="30dp"/>


            <Button
            android:id="@+id/bt10"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/monkey"
            android:backgroundTint="#8593ff"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Monkey"
            android:textSize="30dp"/>

            <Button
            android:id="@+id/bt11"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/soang"
            android:backgroundTint="#ac85ff"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="goose"
            android:textSize="30dp"/>

            <Button
                android:id="@+id/bt12"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/fish"
                android:backgroundTint="#ff85a1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="fish"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt13"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/giraffe"
                android:backgroundTint="#f7ee72"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="GIRAFFE"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt14"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cow"
                android:backgroundTint="#d4d0d1"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="cow"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt15"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sheep"
                android:backgroundTint="#ffe8ad"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="sheep"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt16"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/horse"
                android:backgroundTint="#b1f755"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="horse"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt17"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ant"
                android:backgroundTint="#de9959"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="ant"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt18"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/dolphin"
                android:backgroundTint="#b1f755"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="crocodile"
                android:textSize="30dp"/>





        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panahh"/>

    </LinearLayout>

</RelativeLayout>
