<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.example.ragam.engliszone.BajuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_alignParentTop="true"
        android:background="#ffbf36"
        android:id="@+id/linear">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baju"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="which clothes are I wearing ???"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>


    </LinearLayout>

    <ScrollView
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt1"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/jacket"
                android:backgroundTint="#faf061"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="jacket"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt2"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/shirt"
                android:backgroundTint="#90fff0"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="shirt"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt3"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tshirt"
                android:backgroundTint="#a8ff95"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="T-shirt"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt4"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/skirt"
                android:backgroundTint="#fff5ad"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Skirt"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt5"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/jeans"
                android:backgroundTint="#ed9954"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Shorts"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt6"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/socks"
                android:backgroundTint="#c878fd"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="socks"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt7"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sneaker"
                android:backgroundTint="#efefef"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="shoes"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt8"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/cap"
                android:backgroundTint="#a2ffe9"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="cap"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt9"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tie"
                android:backgroundTint="#ffa496"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="tie"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt10"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/slipper"
                android:backgroundTint="#b6fcb0"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Slippers"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/bt11"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/watches"
                android:backgroundTint="#b0bafc"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="wrist watch"
                android:textSize="30dp"/>




        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/panahh"/>

    </LinearLayout>


</RelativeLayout>
